{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",         // ✅ Saves compiled JS files in "dist/"
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["index.ts", "routes/**/*.ts", "controllers/**/*.ts", "models/**/*.ts"] // ✅ Include all necessary files
}
